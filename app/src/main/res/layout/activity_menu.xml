<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="33dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Menú de Actividades"
        android:textAlignment="center"
        android:textSize="28sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_RepFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repaso Final"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_Tablas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tablas"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_Scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scroll y Horizontal View"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_Diseno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diseños"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_Reproductor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reproductor de musica"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_MargenOpti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Margenes y Optimización"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_Repaso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repaso"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_EcoEnergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EcoEnergy"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_HidroTrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HidroTrack"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>